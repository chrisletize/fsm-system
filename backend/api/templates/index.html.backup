<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FSM Statement Generator</title>
    <style>
        :root {
            /* Default to Get a Grip colors */
            --primary-color: #8B1538;
            --secondary-color: #F5F5DC;
            --accent-color: #2C2C2C;
            --background-color: #FFF5F0;
        }
            * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
            min-height: 100vh;
            padding: 20px;
            transition: background 0.3s ease;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .header {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .logo-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .logo-header img {
            height: 60px;
            width: auto;
        }

        .logo-header .title-group {
            flex: 1;
        }
        
        .header h1 {
            color: #2d3748;
            font-size: 32px;
            margin-bottom: 5px;
        }
        
        .header p {
            color: #718096;
            font-size: 16px;
        }
        
        .companySelector {
            margin-top: 20px;
        }
        
        .companySelector label {
            display: block;
            margin-bottom: 8px;
            color: #4a5568;
            font-weight: 600;
        }
        
        .companySelector select {
            padding: 10px 15px;
            font-size: 16px;
            border: 2px solid #e2e8f0;
            border-radius: 6px;
            background: white;
            cursor: pointer;
            min-width: 300px;
        }
        
        .summary-cards {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .summary-card:nth-child(4),
        .summary-card:nth-child(5),
        .summary-card:nth-child(6),
        .summary-card:nth-child(7) {
            grid-column: span 1;
        }
        
        .summary-card:nth-child(4) {
            grid-column: 1;
        }
        
        .summary-card {
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-left: 4px solid #8B1538;
        }
        
        .summary-card h3 {
            color: #718096;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 10px;
        }
        
        .summary-card .value {
            color: #2d3748;
            font-size: 32px;
            font-weight: bold;
        }
        
        .summary-card.total {
            border-left-color: #8B1538;
            background: linear-gradient(135deg, #fff 0%, #F5F5DC 100%);
        }

        .summary-card.total .value {
            color: #8B1538;
        }
        
        .customers-section {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        
        .section-header {
            padding: 25px 30px;
            background: #8B1538;
            color: white;
        }
        
        .section-header h2 {
            color: white;
            font-size: 24px;
        }
        
        .customer-list {
            padding: 20px;
        }
        
        .customer-card {
            background: #F5F5DC;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            transition: all 0.2s;
        }
        
        .customer-card:hover {
            border-color: #8B1538;
            box-shadow: 0 4px 12px rgba(139, 21, 56, 0.15);
            transform: translateY(-2px);
        }
        
        .customer-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .customer-name {
            font-size: 20px;
            font-weight: 600;
            color: #2d3748;
        }
        
        .customer-total {
            font-size: 24px;
            font-weight: bold;
            color: #8B1538;
        }
        
        .customer-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-bottom: 15px;
            padding: 15px;
            background: white;
            border-radius: 6px;
        }
        
        .detail-item {
            display: flex;
            flex-direction: column;
        }
        
        .detail-label {
            font-size: 12px;
            color: #718096;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }
        
        .detail-value {
            font-size: 16px;
            color: #2d3748;
            font-weight: 600;
        }
        
        .aging-breakdown {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
            margin-bottom: 15px;
        }
        
        .aging-item {
            padding: 10px;
            background: white;
            border-radius: 6px;
            text-align: center;
            border: 2px solid #e2e8f0;
        }
        
        .aging-label {
            font-size: 11px;
            color: #718096;
            text-transform: uppercase;
            margin-bottom: 5px;
        }
        
        .aging-amount {
            font-size: 16px;
            font-weight: 600;
            color: #2d3748;
        }
        
        .aging-item.critical {
            border-color: #e53e3e;
            background: #fff5f5;
        }

        .aging-item.critical .aging-amount {
            color: #e53e3e;
        }
        
        .aging-item.warning {
            border-color: #dd6b20;
            background: #fffaf0;
        }

        .aging-item.warning .aging-amount {
            color: #dd6b20;
        }
        
        .actions {
            display: flex;
            gap: 10px;
        }
        
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }
        
        .btn-primary {
            background: #8B1538;
            color: white;
            box-shadow: 0 2px 4px rgba(139, 21, 56, 0.2);
        }
        
        .btn-primary:hover {
            background: #6d0f2a;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(139, 21, 56, 0.3);
        }
        
        .btn-secondary {
            background: #2C2C2C;
            color: white;
            box-shadow: 0 2px 4px rgba(44, 44, 44, 0.2);
        }
        
        .btn-secondary:hover {
            background: #1a1a1a;
            transform: translateY(-1px);
        }
        
        .loading {
            text-align: center;
            padding: 40px;
            color: #718096;
            font-size: 18px;
        }
        
        .error {
            background: #fed7d7;
            color: #c53030;
            padding: 15px 20px;
            border-radius: 6px;
            margin-bottom: 20px;
        }
        
        .search-box {
            padding: 20px 30px;
            border-bottom: 2px solid #e2e8f0;
            background: #f7fafc;
        }
        
        .search-box input {
            width: 100%;
            padding: 12px 20px;
            font-size: 16px;
            border: 2px solid #e2e8f0;
            border-radius: 6px;
        }
        
        .search-box input:focus {
            outline: none;
            border-color: #8B1538;
            box-shadow: 0 0 0 3px rgba(139, 21, 56, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo-header">
                <img src="/static/get-a-grip-logo.jpg" alt="Get a Grip Logo">
                <div class="title-group">
                    <h1>üìÑ Statement Generator</h1>
                    <p>Generate professional PDF statements for customers with outstanding balances</p>
                </div>
            </div>
            
            <div class="company-selector">
                <label for="company-select">Select Company:</label>
                <select id="company-select" onchange="loadData()">
                    <option value="0" selected>Select a company to begin</option>
                    <option value="">Loading companies...</option>
                </select>
            </div>

            <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #e2e8f0;">
                <a href="/tax-report" style="display: inline-block; padding: 12px 24px; background: var(--primary-color); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; margin-right: 10px;">
                    üìä Tax Report
                </a>
                <a href="/upload" style="display: inline-block; padding: 12px 24px; background: var(--primary-color); color: white; text-decoration: none; border-radius: 8px; font-weight: 600;">
                    üì§ Upload Invoices
                </a>
            </div>
        </div>
        
        <div class="summary-cards">
            <div class="summary-card">
                <h3>Customers</h3>
                <div class="value" id="customer-count">-</div>
            </div>
            <div class="summary-card">
                <h3>Open Invoices</h3>
                <div class="value" id="invoice-count">-</div>
            </div>
            <div class="summary-card total">
                <h3>Total Outstanding</h3>
                <div class="value" id="total-due">$0.00</div>
            </div>
            <div class="summary-card">
                <h3>Current</h3>
                <div class="value" id="aging-current">$0.00</div>
            </div>
            <div class="summary-card">
                <h3>31-60 Days</h3>
                <div class="value" id="aging-30">$0.00</div>
            </div>
            <div class="summary-card">
                <h3>61-90 Days</h3>
                <div class="value" id="aging-60">$0.00</div>
            </div>
            <div class="summary-card">
                <h3>90+ Days</h3>
                <div class="value" id="aging-90">$0.00</div>
            </div>
        </div>

        <!-- Clear Data Button -->
        <div style="margin: 20px 0; text-align: center;">
            <button id="clearDataBtn" 
                    style="background-color: #dc3545; color: white; padding: 12px 24px; 
                           border: none; border-radius: 5px; cursor: pointer; font-size: 16px;
                           display: none;">
                üóëÔ∏è Clear All Data for This Company
            </button>
        </div>

        <div class="customers-section">
            <div class="section-header">
                <h2>Customers with Outstanding Balances</h2>
            </div>
            
            <div class="search-box">
                <input type="text" id="search-input" placeholder="üîç Search customers..." onkeyup="filterCustomers()">
            </div>
            
            <div class="customer-list" id="customer-list">
                <div class="loading">Loading customers...</div>
            </div>
        </div>
    </div>

    <script>
        let allCustomers = [];
        let currentCompanyId = 0; // Default to Letize Kit
        
        // Load companies on page load
        async function loadCompanies() {
            try {
                const response = await fetch('/api/companies');
                const companies = await response.json();
                
                const select = document.getElementById('company-select');
                select.innerHTML = '<option value="0">Select a company to begin</option>' + companies.map(c =>
                    `<option value="${c.id}" ${c.id === currentCompanyId ? 'selected' : ''}>${c.name}</option>`
                ).join('');
            } catch (error) {
                console.error('Error loading companies:', error);
            }
        }
        
        // Load all data
        async function loadData() {
            const select = document.getElementById('company-select');
            currentCompanyId = parseInt(select.value);
    
            await Promise.all([
                loadBranding(),
                loadSummary(),
                loadCustomers()
            ]);
        }
        // Load and apply company branding
        async function loadBranding() {
            try {
                const response = await fetch(`/api/branding/${currentCompanyId}`);
                const branding = await response.json();
        
        // Update CSS variables
        document.documentElement.style.setProperty('--primary-color', branding.primary_color);
        document.documentElement.style.setProperty('--secondary-color', branding.secondary_color);
        document.documentElement.style.setProperty('--accent-color', branding.accent_color);
        document.documentElement.style.setProperty('--background-color', branding.background_color);

        // Update logo
        const logoImg = document.querySelector('.logo-header img');
        if (logoImg) {
            logoImg.src = `/static/${branding.logo}`;
            logoImg.alt = `${branding.name} Logo`;
        }
        
        // Update page title
        const titleElement = document.querySelector('.logo-header h1');
        if (titleElement && branding.display_name) {
            // Keep the emoji, just update company name
            titleElement.innerHTML = `üìÑ ${branding.display_name}`;
        }
        
            } catch (error) {
                console.error('Error loading branding:', error);
            }
        }
        // Load summary stats
        async function loadSummary() {
            try {
                const response = await fetch(`/api/summary?company_id=${currentCompanyId}`);
                const summary = await response.json();
                document.getElementById('customer-count').textContent = summary.customer_count;
                document.getElementById('invoice-count').textContent = summary.invoice_count;
                document.getElementById('total-due').textContent = '$' + summary.total_due.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
                document.getElementById('aging-current').textContent = '$' + summary.current.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
                document.getElementById('aging-30').textContent = '$' + summary.days_30.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
                document.getElementById('aging-60').textContent = '$' + summary.days_60.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
                document.getElementById('aging-90').textContent = '$' + summary.days_90.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
            } catch (error) {
                console.error('Error loading summary:', error);
            }
        }
        
        // Load customers
        async function loadCustomers() {
            const listEl = document.getElementById('customer-list');
            listEl.innerHTML = '<div class="loading">Loading customers...</div>';
            
            try {
                const response = await fetch(`/api/customers?company_id=${currentCompanyId}`);
                allCustomers = await response.json();
                
                renderCustomers(allCustomers);
            } catch (error) {
                console.error('Error loading customers:', error);
                listEl.innerHTML = '<div class="error">Error loading customers. Please refresh the page.</div>';
            }
        }
        // Clear company data
        const clearBtn = document.getElementById('clearDataBtn');
        if (clearBtn) {
            clearBtn.addEventListener('click', async () => {
                const companyId = document.getElementById('company-select').value;
                const companyName = document.getElementById('company-select').selectedOptions[0].text;
        
                if (!confirm(`Are you sure you want to delete ALL invoices and customers for ${companyName}?\n\nThis cannot be undone!`)) {
                    return;
                }
        
                if (!confirm(`FINAL WARNING: This will permanently delete all data for ${companyName}. Continue?`)) {
                    return;
                }
        
                try {
                    const response = await fetch(`/api/clear-company-data/${companyId}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
            
                    if (data.success) {
                        alert(`‚úÖ Deleted ${data.invoices_deleted} invoices and ${data.customers_deleted} customers`);
                        loadSummary();
                        loadCustomers();
                    } else {
                        alert('Error: ' + data.error);
                    }
                } catch (error) {
                    alert('Error clearing data: ' + error);
                }
            });

            // Show/hide clear button when company selected
            const companySelect = document.getElementById('company-select');
            if (companySelect) {
                companySelect.addEventListener('change', () => {
                    if (companySelect.value) {
                        clearBtn.style.display = 'inline-block';
                    } else {
                        clearBtn.style.display = 'none';
                    }
                });
            }
        }
        // Render customer cards
        function renderCustomers(customers) {
            const listEl = document.getElementById('customer-list');
            
            if (customers.length === 0) {
                listEl.innerHTML = '<div class="loading">No customers with outstanding balances found.</div>';
                return;
            }
            
            listEl.innerHTML = customers.map(c => `
                <div class="customer-card">
                    <div class="customer-header">
                        <div class="customer-name">${c.customer_name}</div>
                        <div class="customer-total">$${c.total_due.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="customer-details">
                        <div class="detail-item">
                            <span class="detail-label">Account #</span>
                            <span class="detail-value">${c.account_number || 'N/A'}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Invoices</span>
                            <span class="detail-value">${c.invoice_count}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Email</span>
                            <span class="detail-value">${c.contact_email || 'N/A'}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Phone</span>
                            <span class="detail-value">${c.contact_phone || 'N/A'}</span>
                        </div>
                    </div>
                    
                    <div class="aging-breakdown">
                        <div class="aging-item">
                            <div class="aging-label">Current</div>
                            <div class="aging-amount">$${c.current.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                        </div>
                        <div class="aging-item">
                            <div class="aging-label">31-60 Days</div>
                            <div class="aging-amount">$${c.days_31_60.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                        </div>
                        <div class="aging-item warning">
                            <div class="aging-label">61-90 Days</div>
                            <div class="aging-amount">$${c.days_61_90.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                        </div>
                        <div class="aging-item critical">
                            <div class="aging-label">90+ Days</div>
                            <div class="aging-amount">$${c.over_90_days.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                        </div>
                    </div>
                    
                    <div class="actions">
                        <button class="btn btn-primary" onclick="generateStatement(${c.id}, '${c.customer_name}')">
                            üìÑ Generate PDF Statement
                        </button>
                        ${c.contact_email ? `
                            <button class="btn btn-secondary" onclick="alert('Email feature coming soon!')">
                                üìß Email Statement
                            </button>
                        ` : ''}
                    </div>
                </div>
            `).join('');
        }
        
        // Filter customers by search
        function filterCustomers() {
            const searchTerm = document.getElementById('search-input').value.toLowerCase();
            const filtered = allCustomers.filter(c => 
                c.customer_name.toLowerCase().includes(searchTerm) ||
                (c.account_number && c.account_number.toLowerCase().includes(searchTerm))
            );
            renderCustomers(filtered);
        }
        
        // Generate statement
        async function generateStatement(customerId, customerName) {
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '‚è≥ Generating...';
            btn.disabled = true;
            
            try {
                const response = await fetch(`/api/generate-statement/${customerId}`);
                
                if (!response.ok) {
                    throw new Error('Failed to generate statement');
                }
                
                // Create download link
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `statement_${customerName.replace(/\s+/g, '_')}.pdf`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                btn.textContent = '‚úÖ Downloaded!';
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.disabled = false;
                }, 2000);
            } catch (error) {
                console.error('Error generating statement:', error);
                alert('Error generating statement. Please try again.');
                btn.textContent = originalText;
                btn.disabled = false;
            }
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadCompanies();
            loadBranding(); // Load default LKit branding
        });
    </script>
</body>
</html>
